
<% provide(:title, 'Quotes')%>
<style>
  .navbar {
    background:white;
  }
  .footer {
    display: none;
  }
  .logo {
    height: 85px;
     width: 115px;
  }
  body {
    background:white;



  }
</style>
<br><br><br>
<h1>All Quotes Submitted</h1>

<br>

<table id="albums" class="table" style="width:100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>First</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>


              <% @qetquotes.each do |user| %>

                <tr>
                    	<th ><%= user.created_at.strftime('%m/%d/%Y')  %></th>
                      <th><%= user.firstname %></th>
                      <th><%= user.lastname %></th>
                      <th><%= user.email %></th>
                      <th><%= user.phone %></th>
                      <th><span class="badge badge-success">Quote Sent</span></th>
                      <th width="5%"><%= link_to "<button class='btn btn-success'>View</button>".html_safe, qetquote_path(user.id) %></th>
                      <th width="5%"><%= link_to "<button class='btn btn-primary'>Edit</button>".html_safe, edit_qetquote_path(user) %></th>
                      <td><%= link_to "<button class='btn btn-danger'>Destroy</button>".html_safe,  user, method: :delete, data: { confirm: 'Are you sure?' } %></td>


                </tr>
            <% end %>

            </tbody>

        </table>



        <script>
          gsap.from("#logo", {duration: 3, x: 300, opacity: 0, scale: 0.5});
        </script>


<br>

<%= link_to 'New Qetquote', new_qetquote_path %>

<%= form_for @qetquote, url: next_wizard_path, method: :put do |form| %>

  <% provide(:title, 'Quote Form')%>
<style>
  .container {
      width: 100%;
      max-width: 93%;
  }
  .container-fluid#containercolor {
    background-color:#e8ecf7;

  }

.card-text{
  font-family: Lora,Georgia,serif;
  font-size: 1.00rem;

}
.display-4 {
    font-size: 2.5rem;
    font-weight: 300;
}
</style>

  <br><br><br><br><br>
  <div class="row">
    <div class="col-sm-5">
      <h1 class="display-4" style="padding-left:20px;">Where are you in your insurance search?</h1>

    </div>
    </div>
  <div class="col-sm-5">
  <div id="containercolor" class="container-fluid">


  <br><br>
  <div class="col-lg-12">

  <div class="row">
    <div class="col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Getting Started</h5>
          <p class="card-text">I'm still deciding if i need insurance</p>
          <%= form.check_box :deciding  %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Comparing Quotes</h5>
          <p class="card-text">I'm doing my research and comparing</p>
          <%= form.check_box :comparing  %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Ready To Apply</h5>
          <p class="card-text">I know what I need and I'm ready</p>
          <%= form.check_box :ready  %>


        </div>
      </div>
    </div>
  </div>



          <div class="actions">

            <%= link_to "<button class='btn btn-primary btn-sm btn-block' style='background-color: #2b11a7;'>Next</button>".html_safe, next_wizard_path%>

<br>
          </div>

</div>



      <% end %>
      <br>

  </div>
  </div>

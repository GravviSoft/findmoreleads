
<% provide(:title, 'Quotes')%>

<h1>All Quotes Submitted</h1>

<br>

<table id="albums" class="table" style="width:100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>First</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>


              <% @quotes.each do |user| %>

                <tr>
                    	<th ><%= user.created_at.strftime('%m/%d/%Y')  %></th>
                      <th><%= user.firstname %></th>
                      <th><%= user.lastname %></th>
                      <th><%= user.email %></th>
                      <th><%= user.phone %></th>
                      <th><span class="badge badge-success"><%= user.readyornot %></span></th>
                      <th width="5%"><%= link_to "<button class='btn btn-warning'>New</button>".html_safe, new_quote_path %></th>
                      <th width="5%"><%= link_to "<button class='btn btn-primary'>Edit</button>".html_safe, edit_quote_path(user) %></th>
                      <td><%= link_to "<button class='btn btn-danger'>Destroy</button>".html_safe,  user, method: :delete, data: { confirm: 'Are you sure?' } %></td>


                </tr>
            <% end %>

            </tbody>

        </table>



        <script>
          gsap.from("#logo", {duration: 3, x: 300, opacity: 0, scale: 0.5});
        </script>


